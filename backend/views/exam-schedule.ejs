<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Exam Schedule</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet">
    <link rel="shortcut icon" href="./images/logo.png">
    <link rel="stylesheet" href="../public/style2.css">
    <style>
        .exam-schedule {
            margin: 80px auto;
            padding: 2rem;
            background: var(--color-white);
            border-radius: var(--border-radius-1);
            box-shadow: var(--box-shadow);
            width: 90%;
            max-width: 1000px;
        }
        .exam-schedule h2 {
            margin-bottom: 2rem;
            text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 1rem;
            text-align: left;
            border-bottom: 1px solid var(--color-light);
        }
        th {
            background: var(--color-primary);
            color: var(--color-white);
        }
    </style>
</head>
<body>
    <header>
        <div class="logo">
            
            <h2>U<span class="danger">M</span>S</h2>
        </div>
        <div class="navbar">
            <a href="./facdash.ejs">
                <span class="material-icons-sharp">home</span>
                <h3>Home</h3>
            </a>
            <a href="./facultytimetable.ejs">
                <span class="material-icons-sharp">today</span>
                <h3>Timetable</h3>
            </a>
            <a href="./attendance.ejs">
                <span class="material-icons-sharp">event_available</span>
                <h3>Attendance</h3>
            </a>
            <a href="./choose-course.ejs">
                <span class="material-icons-sharp">school</span>
                <h3>Choose Course</h3>
            </a>
            <div class="eval-dropdown">
                <a href="exam-schedule.ejs" class="active">
                    <span class="material-icons-sharp">grid_view</span>
                    <h3>Evaluation</h3>
                </a>
                <div class="dropdown-content">
                    <a href="exam-schedule.ejs">Exam Schedule</a>
                    <a href="grade-entry.ejs">Grade Entry</a>
                </div>
            </div>
            <a href="front_page.ejs">
                <span class="material-icons-sharp">logout</span>
                <h3>Logout</h3>
            </a>
        </div>
        <div id="profile-btn" style="display: none;">
            <span class="material-icons-sharp">person</span>
        </div>
        <div class="theme-toggler">
            <span class="material-icons-sharp active">light_mode</span>
            <span class="material-icons-sharp">dark_mode</span>
        </div>
    </header>

    <main style="margin: 0;">
        <div class="exam-schedule">
            <h2>Exam Schedule</h2>
            <table>
                <thead>
                    <tr>
                        <th>Course</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Room No.</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Operating Systems</td>
                        <td>April 10, 2025</td>
                        <td>09:00 - 12:00</td>
                        <td>A-101</td>
                    </tr>
                    <tr>
                        <td>Database Management</td>
                        <td>April 12, 2025</td>
                        <td>09:00 - 12:00</td>
                        <td>B-201</td>
                    </tr>
                    <tr>
                        <td>Computer Networks</td>
                        <td>April 14, 2025</td>
                        <td>09:00 - 12:00</td>
                        <td>A-103</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </main>

    <script src="../public/appfac.js"></script>
</body>
</html>