<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mark Attendance</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet">
    <link rel="shortcut icon" href="./images/logo.png">
    <link rel="stylesheet" href="../public/style.css">
    <style>
        .attendance {
            margin: 80px auto;
            padding: 2rem;
            background: var(--color-white);
            border-radius: var(--border-radius-1);
            box-shadow: var(--box-shadow);
            width: 90%;
            max-width: 1000px;
        }
        .attendance h2 {
            margin-bottom: 1rem;
            text-align: center;
        }
        .attendance-selector {
            margin-bottom: 2rem;
            text-align: center;
        }
        .attendance-selector select, .attendance-selector input {
            padding: 0.5rem;
            font-size: 1rem;
            border-radius: 5px;
            border: 1px solid var(--color-light);
            margin: 0 0.5rem;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 1rem;
            text-align: left;
            border-bottom: 1px solid var(--color-light);
        }
        th {
            background: var(--color-primary);
            color: var(--color-white);
        }
        .save-btn {
            display: block;
            margin: 1rem auto;
            padding: 0.5rem 1rem;
            background: var(--color-primary);
            color: var(--color-white);
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s ease;
        }
        .save-btn:hover {
            background: #e04343;
        }
    </style>
</head>
<body>
    <header>
        <div class="logo">
            <img src="./images/logo.png" alt="">
            <h2>U<span class="danger">M</span>S</h2>
        </div>
        <div class="navbar">
            <a href="./facdash.ejs">
                <span class="material-icons-sharp">home</span>
                <h3>Home</h3>
            </a>
            <a href="./facultytimetable.html">
                <span class="material-icons-sharp">today</span>
                <h3>Timetable</h3>
            </a>
            <a href="./attendance.ejs" class="active">
                <span class="material-icons-sharp">event_available</span>
                <h3>Attendance</h3>
            </a>
            <a href="./choose-course.ejs">
                <span class="material-icons-sharp">school</span>
                <h3>Choose Course</h3>
            </a>
            <div class="eval-dropdown">
                <a href="#">
                    <span class="material-icons-sharp">grid_view</span>
                    <h3>Evaluation</h3>
                </a>
                <div class="dropdown-content">
                    <a href="./exam-schedule.ejs">Exam Schedule</a>
                    <a href="./grade-entry.ejs">Grade Entry</a>
                </div>
            </div>
            <a href="#">
                <span class="material-icons-sharp">logout</span>
                <h3>Logout</h3>
            </a>
        </div>
        <div id="profile-btn" style="display: none;">
            <span class="material-icons-sharp">person</span>
        </div>
        <div class="theme-toggler">
            <span class="material-icons-sharp active">light_mode</span>
            <span class="material-icons-sharp">dark_mode</span>
        </div>
    </header>

    <main style="margin: 0;">
        <div class="attendance">
            <h2>Mark Attendance</h2>
            <div class="attendance-selector">
                <select id="course-select">
                    <option value="">Select a Course</option>
                    <!-- Populated dynamically -->
                </select>
                <input type="date" id="attendance-date" />
            </div>
            <table id="attendance-table" style="display: none;">
                <thead>
                    <tr>
                        <th>Student ID</th>
                        <th>Student Name</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody id="attendance-table-body">
                    <!-- Populated dynamically -->
                </tbody>
            </table>
            <button class="save-btn" id="save-attendance" style="display: none;">Save Attendance</button>
        </div>
    </main>

    <script src="../public/appfac.js"></script>
</body>
</html>